#include<stdio.h>
struct Employee{
char name[50];
int id;
float salary;
};
int main(){
  struct Employee employees[2];
  for(int i=0;i<2;i++){
  printf("Enter the details for employee %d\n",i+1);
    printf("name:");
    scanf("%s",employees[i].name);
    printf("ID:");
    scanf("%d",&employees[i].id);
    printf("salary");
    scanf("%f",&employees[i].salary);
  }
  printf("\employees details:\n");
  for(int i=0;i<2;i++){
    printf("name:%s,ID,salary:%.2f\n",employees[i].name,employees[i].id,employees[i].salary);
  }
   return 0; 
}

  
    
